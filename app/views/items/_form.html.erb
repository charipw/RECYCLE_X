<div class="container py-3">

<%= simple_form_for item do |f| %>
    <div class="container text-center">
      <h4>New product alert 🚨 </h4>
      <hr style="width:100%;text-align:left;margin-left:0;color:white;">
      <p>This product does not exist on Recycle-X yet.</p>
      <p>We tried to find some information about the product.</p>
      <p>Reviewing and/or filling in the information is very valuable for us and the community.</p>
      <p>Thank you for contributing to making recycling easier, and the planet better. 🌏 </p>
    </div>


      <%= f.input :name, input_html: {data: {barcode_target: "nameInput"}}%>
      <%= f.input :barcode, input_html: {data: {barcode_target: "barcodeInput"}}%>
      <%= f.input :eco_score, input_html: {data: {barcode_target: "ecoscoreInput"}, readonly: true } %>
      <%= f.input :photo, as: :file %>
      <%= f.input :image_url, input_html: {data: {barcode_target: "imageUrlInput"}, readonly: true } %>

    <div data-item-form-target="packagingWrapper">
      <%= f.association :packagings, as: :check_boxes, label_method: :packaging_label, input_html: {data: {barcode_target:"packagingTagsInput", examples: "" }} %>
    </div>


    <div class="form-actions">
      <%= f.button :submit, "Add product", class:"btn btn-rounded btn-block btn-lg", style:"background-color: #ABD699; color: white;"%>
    </div>
      <% end %>

</div>
