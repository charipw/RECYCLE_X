<h1 class="fw-bold pl-3 pt-3 pb-3 m-3 ">Product history</h1>


  <% @useritems.each do |item|%>
    <%i = Item.find_by id: item.item_id %>
       <%=link_to product_path(item.id), class: "text-decoration-none" do %>
        <div class="col-12 col-sm-6 mb-4" data-aos="zoom-in">
          <div class="card-product m-3">
            <% if i.photo.attached?%>
              <%= cl_image_tag i.photo.key, class:"img-fluid" %>
            <% else %>
              <%= image_tag asset_path('productdefault.png'), class:"img-fluid"  %>
            <% end %>

            <div class="d-flex justify-content-between w-100">
              <div class="card-product-infos">
                <h2><%= i.name %></h2>
                <p><%= i.created_at.strftime("%B %d, %Y") %></p>
              </div>

              <div class="position-relative">
                <div class="position-absolute top-50 end-0 translate-middle">
                  <i class="arrow right"></i>
                </div>
              </div>
            </div>

          </div>



              <%# <div class="d-flex align-items-end justify-content-between pt-4"> %>
            </div>
          </div>
        </div>
      <% end %>
     <% end %>
  </div>
