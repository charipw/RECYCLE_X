
<div class="container pt-2">

<h1>Your Product History</h1>
<br>
  <% @useritems.each do |item|%>
    <%i = Item.find_by id: item.item_id %>
       <%=link_to product_path(item.id), class: "text-decoration-none" do %>
        <div class="col-12 col-sm-6 mb-4" data-aos="zoom-in">
          <div class="card-product">
                <% if i.photo.attached?%>
                  <%= cl_image_tag i.photo.key, class:"img-fluid" %>
                <% else %>
                  <%= image_tag asset_path('productdefault.png'), class:"img-fluid"  %>
                <% end %>
            <div class="card-product-infos">
              <h2><%= i.name %></h2>
            </div>
              <div class="d-flex align-items-end justify-content-between pt-4">
            </div>
          </div>
        </div>
      <% end %>
     <% end %>
  </div>
<hr class="my-5">
